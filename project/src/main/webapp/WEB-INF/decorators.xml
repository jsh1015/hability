<?xml version="1.0" encoding="euc-kr" ?>
<decorators defaultdir="/decorator">
	<!-- decorator폴더의 decorator.jsp로 가면 -->
	<decorator name="main" page="decorator.jsp">
		<pattern>*.shop</pattern>
	</decorator>
	<decorator name="admain" page="adecorator.jsp">
		<pattern>/admin/*</pattern>
	</decorator>
	
	<excludes><!-- sitemesh를 사용하지 않게 -->
		<pattern>/admin/kit*</pattern>
		<pattern>/admin/video*</pattern>
		<pattern>/user/userEntry*</pattern>
		<pattern>/user/login*</pattern>
		<pattern>/user/join*</pattern>
		<pattern>/user/review*</pattern>
		<pattern>/user/reviewWrite*</pattern>
		<pattern>/ajax/*</pattern>
	</excludes>
</decorators>